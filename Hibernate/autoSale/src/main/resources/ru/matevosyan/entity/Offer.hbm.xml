<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping>
    <class name="ru.matevosyan.entity.Offer" table="offers">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="tittle" column="tittle"/>
        <property name="description" column="description"/>
        <property name="soldState" column="sold_state"/>
        <property name="picture" column="picture"/>
        <property name="price" column="price"/>
        <property name="postingDate" column="posting_date"/>
        <property name="address" column="address"/>
        <many-to-one name="user" column="fk_user_id" class="ru.matevosyan.entity.User" not-null="true"/>
        <many-to-one name="car" column="fk_car_id" class="ru.matevosyan.entity.Car" not-null="true"/>
    </class>
</hibernate-mapping>